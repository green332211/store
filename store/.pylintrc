[MASTER]
init-hook='import sys; sys.path.append("/home/green321/workdirectory/venv/lib/python3.12/site-packages")'

disable=C0111,  # Missing module docstring
        C0103,  # Variable name doesn't conform to snake_case
        R0903,  # Too few public methods
        R0201,  # Method could be a function
        W0511,  # TODO/FIXME comments
        W0613,  # Unused argument
        C0330,  # Wrong hanging indentation
        R0913,  # Too many arguments
        C0301,  # Line too long
        C0303,  # Trailing whitespace
        C0305,  # Trailing newlines

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    unused-import,
    no-member,
    no-name-in-module,
    import-error,
    no-self-use,
    too-few-public-methods

[TYPECHECK]
ignored-classes=Course

[REPORTS]
output-format=colorized

